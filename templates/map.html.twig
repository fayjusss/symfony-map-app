{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('css/styles.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="container">

        <!-- Portfolio Item Heading -->
        <h1 class="my-4">Page Heading
            <small>Secondary Text</small>
        </h1>

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8">
                <div id="map"></div>
            </div>

            <div class="col-md-4">
                <h3 class="my-3">Project Description</h3>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae. Sed dui lorem, adipiscing in adipiscing et, interdum nec metus. Mauris ultricies, justo eu convallis placerat, felis enim.</p>
                <h3 class="my-3">Project Details</h3>
                <ul>
                    {#Address input#}
                    <li>
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <input id="address" class="form-control" type="textbox" value="Sydney, NSW">
                                </div>
                                <div class="col-md-6">
                                    <input id="submit-location" class="btn btn-success" type="button" value="Geocode">
                                </div>
                            </div>
                        </form>
                    </li>
                    {#/Address input#}

                    {#Marker color picker#}
                    <li>
                        <form>
                            <div class="row">
                                <div class="col-md-6 vertical-align">
                                    <input type="color" id="marker-color" class="form-control" value="#ff0000">
                                </div>
                                <div class="col-md-6">
                                    <input id="submit-color" class="btn btn-success" type="button" value="Change Marker Color!">
                                </div>
                            </div>
                        </form>
                    </li>
                    {#/Marker color picker#}

                    {#Marker icon change#}
                    <li>
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <input id="address" class="form-control" type="textbox" value="Sydney, NSW">
                                </div>
                                <div class="col-md-6">
                                    <input id="submit" class="btn btn-success" type="button" value="Geocode">
                                </div>
                            </div>
                        </form>
                    </li>
                    {#/Marker icon change#}
                </ul>
            </div>

        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/map.js') }}"></script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDopRt3mlPGSUXVLCPaPVCxslHytcpw9AY&callback=initMap">
    </script>
{% endblock %}

