{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('css/styles.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="m-5">
        <div class="row">

            <div class="col-md-6">
                <div id="map"></div>
            </div>

            <div class="col-md-6">
                <h3 class="my-3">Map Description</h3>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae. Sed dui lorem, adipiscing in adipiscing et, interdum nec metus. Mauris ultricies, justo eu convallis placerat, felis enim.</p>
                <h3 class="my-3">Options</h3>
                <ul>
                    {#Address input#}
                    <li>
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <input id="address" class="form-control" type="textbox" value="Sydney, NSW">
                                </div>
                                <div class="col-md-6">
                                    <input id="submit-location" class="btn btn-block btn-outline-success" type="button" value="Mark from Address!">
                                </div>
                            </div>
                        </form>
                    </li>
                    {#/Address input#}

                    {#Marker color picker#}
                    <li>
                        <form>
                            <div class="row">
                                <div class="col-md-6 vertical-align">
                                    <input type="color" id="marker-color" class="form-control" value="#ff0000">
                                </div>
                                <div class="col-md-6">
                                    <input id="submit-color" class="btn btn-block btn-outline-success" type="button" value="Change Marker Color!">
                                </div>
                            </div>
                        </form>
                    </li>
                    {#/Marker color picker#}

                    {#Marker icon change#}
                    <li>
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <input id="marker-icon" class="form-control" type="url" list="defaultURLs" required>
                                    <datalist id="defaultURLs">
                                        <option value="https://developers.google.com/maps/documentation/javascript/examples/full/images/beachflag.png" label="Beach Flag">
                                    </datalist>
                                </div>
                                <div class="col-md-6">
                                    <input id="submit-icon" class="btn btn-block btn-outline-success" type="button" value="Add URL and Change Marker">
                                </div>
                            </div>
                        </form>
                    </li>
                    {#/Marker icon change#}
                    <li>
                        <input id="clear-markers" class="btn btn-block btn-outline-primary" type=button value="Hide Markers">
                    </li>
                    <li>
                        <input id="show-markers" class="btn btn-block btn-outline-primary" type=button value="Show All Markers">
                    </li>
                    <li>
                        <input id="delete-markers" class="btn btn-block btn-outline-danger" type=button value="Delete Markers">
                    </li>
                </ul>
            </div>

        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/map.js') }}"></script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDopRt3mlPGSUXVLCPaPVCxslHytcpw9AY&callback=initMap">
    </script>
{% endblock %}

